{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "CommonJS",                 // CommonJS avoids ESM runtime errors
    "moduleResolution": "Node",           // Resolve like Node.js
    "target": "ESNext",                    // Use modern JavaScript features
    "lib": ["ESNext"],                     // Include modern library definitions
    "types": ["node"],                     // Node.js type declarations

    /* Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module Syntax */
    "esModuleInterop": true,               // Allow default imports from CJS modules
    "allowSyntheticDefaultImports": true,  // Needed for express/cors
    "skipLibCheck": true                   // Skip type checking for node_modules
  },
  "include": ["src"],                      // Include only our code folder
  "exclude": ["node_modules"]              // Ignore dependencies
}
