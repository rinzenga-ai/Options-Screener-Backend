{
  "compilerOptions": {
    /* File layout */
    "rootDir": "./",
    "outDir": "./dist",

    /* Environment */
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    /* Strictness (you can tighten later) */
    "strict": true,
    "skipLibCheck": true,

    /* Interop & ergonomics */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Quality-of-life */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
